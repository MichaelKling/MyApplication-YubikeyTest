<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <TextView
        android:text="Log:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logLabel"
        android:layout_below="@+id/cbxStartIsoDep"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start IsoDep"
        android:id="@+id/cbxStartIsoDep"
        android:checked="false"
        android:layout_below="@+id/cbxGetTag"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Tag"
        android:id="@+id/cbxGetTag"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="true" />
    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@+id/logLabel"
        android:fillViewport="true">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/log"
            android:layout_alignParentStart="true" />
    </ScrollView>

</RelativeLayout>
